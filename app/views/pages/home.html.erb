<header class="text-center text-white masthead" style="background:url(<%= image_url 'bg-masthead.jpg' %>) no-repeat center center;background-size:cover;">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto position-relative">
                <h1 class="mb-5">Buy and Sell Used Diving Gear in Australia!</h1>
            </div>
            <div class="col-md-10 col-lg-8 col-xl-7 mx-auto position-relative">
                <%= form_with url: listings_path, method: :get do |f| %>
                    <div class="row">
                        <div class="col-12 col-md-9 mb-2 mb-md-0"><%= f.text_field :search, class: "form-control form-control-lg", placeholder: "Search for available items... (Hint: try 'wetsuit')" %></div>
                        <!--<div class="col-12 col-md-9 mb-2 mb-md-0"><input class="form-control form-control-lg" type="text" placeholder="Search for available items... (Hint: try 'wetsuit')"></div>-->
                        <div class="col-12 col-md-3"><%= f.submit "Search", class: "btn btn-primary btn-lg" %></div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</header>

<div class="container d-flex flex-column align-items-center py-4 py-xl-5">
        <div class="row gy-4 row-cols-1 row-cols-md-2 w-100" style="max-width: 800px;">


            <div class="col d-md-flex order-first justify-content-md-center align-items-md-center order-md-1">
                <div class="text-center" style="width: 80%;">
                    <h2>Check out this sample of items for sale!</h2>
                    <p class="w-lg-50">Any of these take your interest? Click on one for more!</p>
                </div>
            </div>

            <% @listings.limit(3).each do |listing| %>
                <div class="col order-md-2">
                <% if listing.images.attached? %>
                    <%= link_to listing, action: 'get' do %>
                        <div class="card"><%= image_tag(listing.images.first, class: "card-img w-100 d-block")%>
                            <div class="card-img-overlay text-center d-flex flex-column justify-content-center align-items-center p-4">
                                <h4 class="text-white bg-dark"><%= listing.title.truncate(20) %></h4>
                                <p class="text-white bg-dark"><%= listing.description.body.to_plain_text.truncate(50) %></p>
                            </div>
                        </div>
                    <% end %>
                <% else %>
                    <div class="card"><img class="card-img w-100 d-block" src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png">
                        <div class="card-img-overlay text-center d-flex flex-column justify-content-center align-items-center p-4">
                                <h4 class="text-white bg-dark"><%= listing.title.truncate(20) %></h4>
                                <p class="text-white bg-dark"><%= listing.description.body.to_plain_text.truncate(50) %></p>
                            </div>
                        </div>
                <% end %>

                </div>
            <% end %>


        </div>
    </div>

<section class="text-center bg-light features-icons">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="mx-auto features-icons-item mb-5 mb-lg-0 mb-lg-3">
                    <div class="d-flex features-icons-icon"><i class="icon-screen-desktop m-auto text-primary" data-bss-hover-animate="pulse"></i></div>
                    <h3>One Spot Marketplace</h3>
                    <p class="lead mb-0">Buy and sell used dive gear all on this one website!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mx-auto features-icons-item mb-5 mb-lg-0 mb-lg-3">
                    <div class="d-flex features-icons-icon"><i class="icon-emotsmile m-auto text-primary" data-bss-hover-animate="pulse"></i></div>
                    <h3>No Hidden Charges to Buy</h3>
                    <p class="lead mb-0">See your total before you place your order!</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="mx-auto features-icons-item mb-5 mb-lg-0 mb-lg-3">
                    <div class="d-flex features-icons-icon"><i class="icon-check m-auto text-primary" data-bss-hover-animate="pulse"></i></div>
                    <h3>Easy to Use Website</h3>
                    <p class="lead mb-0">Navigate to where you want to go!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="text-center bg-light testimonials">
    <div class="container">
        <h2 class="mb-5">What people are saying...</h2>
        <div class="row">
            <div class="col-lg-6">
                <div class="mx-auto testimonial-item mb-5 mb-lg-0"><img class="rounded-circle img-fluid mb-3" src="<%= image_url 'testimonials-1.jpg'%>">
                    <h5>Margaret E.</h5>
                    <p class="font-weight-light mb-0">"The seller was quick to ship my order!"</p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mx-auto testimonial-item mb-5 mb-lg-0"><img class="rounded-circle img-fluid mb-3" src="<%= image_url 'testimonials-2.jpg' %>">
                    <h5>Fred S.</h5>
                    <p class="font-weight-light mb-0">"I now have gear ready to go diving!"</p>
                </div>
            </div>
        </div>
    </div>
</section>
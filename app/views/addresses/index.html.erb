<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Unit type</th>
      <th>Unit num</th>
      <th>Lvl type</th>
      <th>Lvl num</th>
      <th>Street type</th>
      <th>Street num</th>
      <th>Street name</th>
      <th>Suburb</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.first_name %></td>
        <td><%= address.last_name %></td>
        <td><%= address.unit_type %></td>
        <td><%= address.unit_num %></td>
        <td><%= address.lvl_type %></td>
        <td><%= address.lvl_num %></td>
        <td><%= address.street_type %></td>
        <td><%= address.street_num %></td>
        <td><%= address.street_name %></td>
        <td><%= address.suburb %></td>
        <td><%= address.postcode_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

